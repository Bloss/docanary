@import '../style/config.styl'

$navbarHeight = 60px

.navbar
	height $navbarHeight
	width 100%
	z-index 1
	background-color var(--theme-color)

.nav
	width 100%
	height 100%

.container
	height 100%
	padding-right 15px
	padding-left 15px
	margin-right auto
	margin-left auto

@media (min-width $medium)
	.container
		width 970px

@media (min-width $large)
	.container
		width 1170px

.navbar-header
	height 100%
	color #fff
	float left
	padding 0 25px
	display inline
	line-height $navbarHeight
	&:before
		display table
		content " "